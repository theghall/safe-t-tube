<div id="profiles">
    <% if @profiles.count == 0 %>
        <%= "No Profiles" %>
    <% else %>
        <p>Current profile: <%= current_profile_name %></p>
        <% if !parent_mode? %>
            <%= link_to 'Add Video', new_parentmode_session_path, class: 'btn btn-primary' %>
        <% end %>
        <p>Profiles:</p>
        <ul class="profiles">
            <% @profiles.each do |p| %>
                <li>
                <%= link_to "#{p.name}", profiles_sessions_path(name: p.name), method: :post %>
                </li>
            <% end %>
        </ul>
    <% end %>
</div>