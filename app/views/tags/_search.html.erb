<%= form_for(:tags, html: {id: 'tag-search-form'}, url: tags_path, method: :get, remote: true) do |f| %>
    <%= f.label :name, 'Tag', id: 'search-label' %>
    <%= f.text_field :name  %>
    <%= f.submit 'Search', id: 'search-submit', class: 'btn btn-primary' %>
<% end %>
<%= button_to('Clear Search', tags_path, form: {id: 'clear-submit-form'}, id: 'clear-submit', method: :get, disabled: !search_tag?, class: 'btn btn-primary', params: { tags: { name: '' }}, remote: true, data: { disable_with: 'Clear Search' }) %>
