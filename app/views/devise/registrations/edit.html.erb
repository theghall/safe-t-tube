<% provide(:title, "Edit Account Details") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/parent_page_btn' %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

      <%= f.label :name, class: 'col-form-label col-form-label-lg' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control input-lg' %>
      
      <%= f.label :email, class: 'col-form-label col-form-label-lg' %>
      <%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
  
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	      <div><p class='info'>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p></div>
      <% end %>

      <%= f.label :pin, class: 'col-form-label col-form-label-lg' %> <em class='info'>(leave blank if you don't want to change it)</em>
      <%= f.password_field :pin, autocomplete: "off", :maxlength => 4, class: 'form-control input-lg' %>
      
      <%= f.label :pin_confirmation, class: 'col-form-label col-form-label-lg' %>
      <%= f.password_field :pin_confirmation, autocomplete: "off", :maxlength => 4, class: 'form-control input-lg' %>

      <%= f.label :password, class: 'col-form-label col-form-label-lg' %> <em class='info'>(leave blank if you don't want to change it)</em>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
      <% if @minimum_password_length %>
      <em class='info'><%= @minimum_password_length %> characters minimum</em><br/>
      <% end %>

      <%= f.label :password_confirmation, class: 'col-form-label col-form-label-lg' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg' %>

      <%= f.label :current_password, class: 'col-form-label col-form-label-lg' %> <em class='info' %>(we need your current password to confirm your changes)</em>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control input-lg' %>

      <%= f.submit "Update", class: 'btn-lg btn-primary' %>

    <% end %>
  </div>
</div>
