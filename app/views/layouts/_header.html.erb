<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Safe-T-Tube", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <li><%= link_to "FAQ",    faq_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
	      <% if parent_mode? %>
                <li><%= link_to "Account Details", edit_user_registration_path %></li>
                <li><%= link_to "Cancel Account", user_registration_path,
                        data: { confirm: "Cancel account: Are you sure?" }, method: :delete %></li>
              <li class="divider"></li>
                <li><%= link_to "Application Settings", settings_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
